<% provide(:title, @user.username) %>
<%= javascript_include_tag 'jqueryTutorial' %>
<%= javascript_include_tag 'todo' %>
<%= javascript_include_tag 'list_sort' %>
<head>
  <title><%= yield :title %></title>
  <!--
  <link rel="stylesheet" href="todo_table.css">
-->
</head>
<div class="row">
  <div class="col-xs-12">
    <h1>
    	<%= yield :title %>
    	<%= gravatar_for @user %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <!-- <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3"> -->
      <div class="col-xs-10 col-sm-4">
        <div class="profile">


          <div class="row">
            <!-- <section>
            	<%= render 'shared/stats' %>
            </section>
            <div class="span8">
            	<%= render 'follow_form' if signed_in? %>
            </div> -->
            <p id="notice"><%= notice %></p>

            <div class="col-xs-12 gravatar">
              <%= gravatar_for @user %>
            </div>

            <div class="col-xs-12 prof_field">
              <b>Username:</b>
              <%= @user.username %>
            </div>

            <div class="col-xs-12 prof_field">
              <b>Email:</b>
              <%= @user.email %>
            </div>

            <div class="col-xs-12">
              <div class="row">
                <!-- <div class="col-xs-8 col-xs-offset-2"> -->
                <div class="col-xs-5">
                  <%= link_to 'EDIT', edit_user_path(@user), :class=>"btn btn-primary btn-block" %>
                </div>
              </div>
            </div>
          </div>

        </div>

      </div>

      <div class="col-sm-8">
        <div class="card">
          <div class="row">
            <div class="col-xs-12">
              <h1>All Lists</h1>
              <hr>
              <% @lists.each do |list| %>
                <%= render 'lists/list', :list => list %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
