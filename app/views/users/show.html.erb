<% provide(:title, @user.username) %>
<title><%= yield :title %></title>
<h1>
	<%= yield :title %>
	<%= gravatar_for @user %>
</h1>
<p id="notice"><%= notice %></p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>Password:</b>
  <%= @user.password %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
<%= link_to 'Go to Your Todos!', user_todos_path(@user) %>
