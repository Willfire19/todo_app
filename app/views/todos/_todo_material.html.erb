
<div class="col-xs-12 col-sm-8 col-sm-offset-2" >
	<div class="todo_material">
		<div class="row advanced">
			<% if todo.list!= nil %>
				<div class="col-xs-8 col-xs-offset-2 listName_material"><h3><%= todo.list.name %></h3></div>
			<% end %>
		</div>
		<div class="row advanced">
			<div class="col-xs-12 status_material">Status: <%= todo.status %></div><br>
		</div>
		<div class="row default" id="borderBottom">
			<div class="col-xs-10 entry_material"><%= todo.entry %></div>
			<div class="col-xs-2 dueDate"><%= l todo.dueDate, format: :duedate %></div>
		</div>
		<div class="row advanced" id="padBottom">
			<div class="col-xs-6 numbers"><h4>Difficulty</h4> <%= todo.difficulty %></div>
			<div class="col-xs-6 numbers"><h4>Priority</h4> <%= todo.priority %></div>
		</div>

		<% if current_user?(todo.user) %>
		<div class="row default">
			<div class="col-xs-4 links"><%= link_to 'Show', user_todo_path(current_user, todo) %></div>
			<div class="col-xs-4 links"><%= link_to 'Edit', edit_user_todo_path(current_user, todo) %></div>
			<div class="col-xs-4 links"><%= link_to "Delete", user_todo_path(current_user, todo), method: :delete, data: { confirm: "You sure?" }, title: todo.entry %></div>
		</div>
		<% end %>
	</div>
</div>