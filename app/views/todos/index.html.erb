<h1>Listing todos</h1>

<table>
  <tr>
    <th>Entry</th>
    <th>Due Date</th>
    <th>Assigned Date</th>
    <th>Priority</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todo.each do |todo| %>
  <tr>
    <td><%= todo.entry %></td>
    <td><%= todo.dueDate %></td>
    <td><%= todo.assignedDate %></td>
    <td><%= todo.priority %></td>
    <td><%= link_to 'Show', user_todo_path %></td>
    <td><%= link_to 'Edit', edit_user_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

