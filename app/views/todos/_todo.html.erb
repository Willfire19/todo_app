
<div class="span4 todo" >
	<div class="row-fluid" id="borderBottom">
		<div class="span6 status"><%= todo.status %></div>
		<div class="span6 dueDate"><%= l todo.dueDate, format: :duedate %></div>
	</div>
	<div class="row-fluid" id="borderBottom">
		<div class="span12 entry"><%= todo.entry %></div>
	</div>
	<% if todo.list!= nil %>
		<div class="row-fluid" id="marginTop">
			<div class="span12 listName"><h3><%= todo.list.name %></h3></div>
		</div>
	<% end %>
	<div class="row-fluid" id="padBottom">
		<div class="span6 numbers"><h4>Difficulty</h4> <%= todo.difficulty %></div>
		<div class="span6 numbers"><h4>Priority</h4> <%= todo.priority %></div>
	</div>
	<% if current_user?(todo.user) %>
	<div class="row-fluid">
		<div class="span4 links"><%= link_to 'Show', user_todo_path(current_user, todo) %></div>
		<div class="span4 links"><%= link_to 'Edit', edit_user_todo_path(current_user, todo) %></div>
		<div class="span4 links"><%= link_to "Delete", user_todo_path(current_user, todo), method: :delete, data: { confirm: "You sure?" }, title: todo.entry %></div>
	</div>
	<% end %>
</div>