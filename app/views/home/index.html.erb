<%= provide(:title, "Home") %>
<title><%= yield :title %></title>
<%= javascript_include_tag 'jqueryTutorial' %>
<%= javascript_include_tag 'todo' %>
<%= javascript_include_tag 'list_sort' %>
<p id="no-script">
	Javascript is awesome and makes this site even more awesome. You should have it enabled!
</p>
<% if signed_in? %>
	<div class="row">
		<!-- <div class="span8"> -->
		<aside class="col-xs-12">
			<!-- <section>
				<p class="disclaimer">This is a disclaimer</p>
				<input type="button" id="togDisclaimer" value="Hide" />
			</section> -->
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<% if @user == current_user %>
		    <b>Todos (<%= @user.todos.count %>)<%= link_to ' Add a New Todo!', new_user_todo_path(@user) %></b>
		    <b>Lists (<%= @user.lists.count %>)<%= link_to ' Add a New List!', new_user_list_path(@user) %></b>
		  <% else %>
		    <b>Todos (<%= @user.todos.count %>)</b>
		    <b>Lists (<%= @user.lists.count %>)</b>
		  <% end %>
			<% if @user.todos.any? %>
				<div class="row">
				  <div class="col-xs-12 col-sm-3">
				    <ul class="nav nav-pills nav-stacked" style="margin-top: 20px;">
				    <li role="presentation" class="list_sort active"><a href="#">All</a></li>				    
				    <% @lists.each do |list| %>
				      <%= render 'lists/list_sort', :list => list %>
				    <% end %>
				    </ul>
				  </div>
				  <div class="col-xs-12 col-sm-9">
				  	<div class="row">
				  		<!-- <div class="col-xs-12 col-sm-10 col-sm-offset-1" style="height:100px;background-color:blue;" >
				  		</div> -->
				  		<%= render 'todos/form' %>
				  	</div>
				    <div class="row">
				      <% @todos.each do |todo| %>
				        <%= render 'todos/todo_material', :todo => todo %>
				      <% end %>
				    </div>
				  </div>
				</div>
			<% end %>

		</aside>
		<!-- <div class="span4">
			<h3>Todo Feed</h3>
			erb ruby render shared/feed end erb ruby
		</div> -->
	</div>
<% else %>
	<%= render 'intro_home' %>
<% end %>